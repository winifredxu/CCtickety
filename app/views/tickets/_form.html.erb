<%= simple_form_for @ticket, html: { class: 'form-horizontal' } do |f| %>
  <%= f.input :title, label: "Title", input_html: { style: "width: 100px"} %>
  <%= f.input :body, label: "Body", label_html: {style: "font-size: 14px"} %>
  <%= f.input :status, label: "Status" %>
  <%= @ticket.status ? "Resolved by #{@ticket.resolver.first_name}" : "" %>

  <%= f.submit class: "btn btn-primary" %>
<% end %>